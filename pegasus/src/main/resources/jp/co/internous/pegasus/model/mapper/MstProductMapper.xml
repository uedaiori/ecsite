<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.co.internous.pegasus.model.mapper.MstProductMapper">
    <select id="findByCategoryAndProductName" resultType="jp.co.internous.pegasus.model.domain.MstProduct">
        SELECT * FROM mst_product
		WHERE category_id = #{category} AND
		<foreach item="item" collection="keywords" open="(" close=")" separator=""  index="idx">
				<choose>
					<when test="idx == 0">
						(product_name LIKE '%${item}%') 
					</when>
					<otherwise>
						OR (product_name LIKE '%${item}%') 
					</otherwise>
				</choose>
		</foreach>
		ORDER BY id;
	</select>
	
		<select id="findByProductName" resultType="jp.co.internous.pegasus.model.domain.MstProduct">
		SELECT * FROM mst_product
		<foreach item="item" collection="keywords" open="" close="" separator="" index="idx">
				<choose>
					<when test="idx == 0">
						WHERE (product_name LIKE '%${item}%')
					</when>
					<otherwise>
						OR (product_name LIKE '%${item}%')
					</otherwise>
				</choose>
		</foreach>
		ORDER BY id;
</select>
</mapper>